{
    "plugins": ["plugins/markdown"],
    "source": {
        "include": ["src"], 
        "includePattern": ".js$",
        "excludePattern": "(node_modules/|docs)"
    },
    "templates": {
        "cleverLinks": true,
        "monospaceLinks": true
    },
    "opts": {                      
        "destination": "./jsdoc",          
        "recurse": true,
        "template": "./template",
        "tutorials": "./tutorials",
        "readme": "./readme.md"
    }
}